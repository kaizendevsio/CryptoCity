
@{
    Layout = "~/Views/Shared/_PartialView.cshtml";

    ViewBag.Title = "World CryptoCity | Trade";
}
@model ConvertVM
 <main class="main-content">

    <div class="buy">
        <div class="buy__header">

            <h2>WCCP Converter</h2>

        </div>
        <div class="buy__body">

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>From</label>
                        <select class="mdb-select md-form" style="display: none;">
                            @foreach (var modelItem in Model.UserWallets)
                            {
                            <option value="@Html.ValueFor(modelList => modelItem.WalletCode)">@Html.DisplayFor(modelList => modelItem.WalletName) (@Html.DisplayFor(modelList => modelItem.Balance) @Html.DisplayFor(modelList => modelItem.WalletCode)  | @String.Format("{0:#,##0.00}", modelItem.BalanceFiat).ToString() USD)</option>
                                @Html.DisplayFor(modelList => modelItem.WalletCode)
                            }
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <label>User BTC Address</label>
                    <div class="input-wrap">
                        <input type="text" name="" class="" placeholder="BTC Addess" value="1KFHE7w8BhaENAswwryaoccDb6qcT6DbYY" readonly>
                    </div>
                </div>

                <div class="col-md-4">
                    <label>Amount</label>
                    <div class="input-wrap">
                        <input type="text" name="" class="" placeholder="Amount to convert">
                    </div>
                </div>
                <h4 style="color:red; margin-left:17px;">Minimum 30 WCCP or more Fee 3%</h4>

            </div>

