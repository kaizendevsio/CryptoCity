@{

    ViewBag.Title = "World CryptoCity | Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model LoginVM

    <section>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 auth-left">
                    <div class="row auth-form mb-4">
                        <div class="col-12 col-sm-12">
                            <div class="auth-text-top mb-4">
                                <h1>Log In</h1>
                            </div>

                            <form class="form-horizontal" onsubmit="sendFormData('@Url.Action("Login", "Home")','POST',this); return false">

                                <div class="form-group">
                                    <label for="email">Username</label>
                                    <div class="input-icon">
                                        <i class="mdi mdi-account-circle"></i>
                                        <input type="text" class="form-control" id="username" asp-for="Username" name="Username" placeholder="Enter Username" autofocus>

                                    </div>
                                </div>
                                <div class="form-group ">
                                    <label for="password">Password</label>
                                    <div class="input-icon">
                                        <i class="mdi mdi-lock" ></i>
                                        <span class="passtoggle mdi mdi-eye toggle-password" onclick="myFunction()"></span>
                                        <input type="password" class="form-control" id="password-string" asp-for="PasswordString" name="PasswordString" placeholder="Enter Your Password">
                                    </div>
                                </div>
                                <div class="d-flex form-check">
                                    <a onclick="location.href='@Url.Action("ForgotPassword", "Home")'">Forgot my password</a>

                                </div>
                                <button onclick="showPreload(this);" class="btn btn-primary btn-block btn-c mt-4 mb-4">Submit</button>
                            </form>
                            <div class="btn-social mb-4">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 auth-right d-lg-flex d-none bg-gradient" id="particles">
                    <div class="logo">
                    </div>
                    <div class="heading">
                    </div>
                    <div class="shape"></div>
                </div>
            </div>
        </div>

        @section Scripts{

            <script src="~/assets/jquery-3.3.1.min.js"></script>

            <script src="~/assets/bootstrap.min.js"></script>
            <script src="~/assets/popper.min.js"></script>
            <script src="~/assets/particles.js"></script>
            <script src="~/assets/custom.js"></script>
            <script src="~/js/site_v2.js"></script>
            <script>

               function myFunction() {
  var x = document.getElementById("password-string");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}</script>
        }




    </section>
